<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#fffa3037" />
            <stroke
                android:width="1dp"
                android:color="#ffd2040c" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fffa3037"
                android:endColor="#ffd2040c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffd2040c" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>